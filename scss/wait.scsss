}
.type{
  animation: 
    typing 3.5s steps(252, end),
    blink-caret .75s step-end infinite;
}
.delete{
  animation: 
    typeEnd 1s steps(252, end),
    blink-caret .75s step-end infinite;
}
/* The typing effect */
@keyframes typing {
  from { width: 0%; }
  to { width: 100% }
}
@keyframes typeEnd {
  from { width: 100% }
  to { width: 0% }
}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: rgb(0, 0, 0); }
}
