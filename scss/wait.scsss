#typewriter{
  animation: head-jiggle 5s infinite ease-in-out, intro 5s 1 cubic-bezier(0.785, 0.135, 0.15, 0.86) forwards;}
#typewriter h3 {
  overflow: hidden; /* Ensures the content is not revealed until the animation */
